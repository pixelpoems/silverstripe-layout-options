{
    "name": "pixelpoems/silverstripe-layout-options",
    "type": "silverstripe-vendormodule",
    "description": "Silverstripe Module to attach multiple layout options to pages and elements.",
    "keywords": [
        "silverstripe",
        "layout",
        "extension"
    ],
    "authors": [
        {
            "name": "Bettina Wagner-LÃ¶ffler",
            "homepage": "https://www.pixelpoems.com/",
            "role": "Lead Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/silverstripeltd/silverstripe-colorpalette"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/cms": "^6.0",
        "silverstripe/framework": "^6.0",
        "pixelpoems/silverstripe-selection-field": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Pixelpoems\\LayoutOptions\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "extra": {
        "installer-name": "silverstripe-layout-options"
    },
    "license": "BSD-3-Clause"
}
